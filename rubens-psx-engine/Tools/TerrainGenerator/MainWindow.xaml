<Window x:Class="TerrainGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Terrain Generator" Height="700" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Procedural Terrain Generator" FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Terrain Dimensions" Margin="0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Label Content="Width:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Name="WidthTextBox" Grid.Row="0" Grid.Column="1"
                                 VerticalAlignment="Center" Text="128"/>

                        <Label Content="Height:" Grid.Row="1" Grid.Column="0"/>
                        <TextBox Name="HeightTextBox" Grid.Row="1" Grid.Column="1"
                                 VerticalAlignment="Center" Text="128"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Noise Parameters" Margin="0,5">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Label Content="Seed:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox Name="SeedTextBox" Grid.Row="0" Grid.Column="1"
                                 VerticalAlignment="Center" Text="12345"/>
                        <Button Name="RandomSeedButton" Grid.Row="0" Grid.Column="2"
                                Content="Rnd" Click="RandomSeedButton_Click" Margin="5,0,0,0"/>

                        <Label Content="Noise Scale:" Grid.Row="1" Grid.Column="0"/>
                        <Slider Name="NoiseScaleSlider" Grid.Row="1" Grid.Column="1"
                                VerticalAlignment="Center" Minimum="1" Maximum="20" Value="5"/>
                        <Label Content="{Binding ElementName=NoiseScaleSlider, Path=Value, StringFormat={}{0:F1}}"
                               Grid.Row="1" Grid.Column="2"/>

                        <Label Content="Octaves:" Grid.Row="2" Grid.Column="0"/>
                        <Slider Name="OctavesSlider" Grid.Row="2" Grid.Column="1"
                                VerticalAlignment="Center" Minimum="1" Maximum="8" Value="4"
                                TickFrequency="1" IsSnapToTickEnabled="True"/>
                        <Label Content="{Binding ElementName=OctavesSlider, Path=Value, StringFormat={}{0:F0}}"
                               Grid.Row="2" Grid.Column="2"/>

                        <Label Content="Persistence:" Grid.Row="3" Grid.Column="0"/>
                        <Slider Name="PersistenceSlider" Grid.Row="3" Grid.Column="1"
                                VerticalAlignment="Center" Minimum="0.1" Maximum="1" Value="0.5"/>
                        <Label Content="{Binding ElementName=PersistenceSlider, Path=Value, StringFormat={}{0:F2}}"
                               Grid.Row="3" Grid.Column="2"/>

                        <Label Content="Height Scale:" Grid.Row="4" Grid.Column="0"/>
                        <Slider Name="HeightScaleSlider" Grid.Row="4" Grid.Column="1"
                                VerticalAlignment="Center" Minimum="1" Maximum="50" Value="10"/>
                        <Label Content="{Binding ElementName=HeightScaleSlider, Path=Value, StringFormat={}{0:F1}}"
                               Grid.Row="4" Grid.Column="2"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Heightmap Preview" Margin="0,5">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        <Label Content="Generated Heightmap:" Grid.Row="0"/>
                        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
                            <Image Name="HeightmapPreviewImage" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Export Options" Margin="0,5">
                    <StackPanel Margin="5">
                        <Label Content="Export Format:"/>
                        <RadioButton Name="ObjRadio" Content="Wavefront OBJ (.obj)" IsChecked="True" Margin="5"/>
                        <RadioButton Name="FbxRadio" Content="Autodesk FBX (.fbx)" Margin="5"/>

                        <Label Content="Filename:" Margin="0,10,0,0"/>
                        <TextBox Name="FilenameTextBox" Text="terrain" Margin="5,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="GenerateButton" Content="Generate Terrain" Width="120" Height="30"
                        Click="GenerateButton_Click" Margin="5"/>
                <Button Name="PreviewButton" Content="Preview 3D" Width="120" Height="30"
                        Click="PreviewButton_Click" Margin="5" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="SaveButton" Content="Save Model" Width="120" Height="30"
                        Click="SaveButton_Click" Margin="5" IsEnabled="False"/>
                <Button Name="SaveHeightmapButton" Content="Save Heightmap" Width="120" Height="30"
                        Click="SaveHeightmapButton_Click" Margin="5" IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>